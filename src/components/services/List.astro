---
import type { Service } from '../../types';
import ServiceItem from './Item.astro';

interface Props {
  services: Service[];
}

const { services } = Astro.props;
---

<section class='container px-6 mx-auto'>
  <div class='py-12'>
    <span class='inline-block w-40 h-1 bg-orange-500 rounded-full'></span>
    <span class='inline-block w-3 h-1 ml-1 bg-orange-500 rounded-full'></span>
    <span class='inline-block w-1 h-1 ml-1 bg-orange-500 rounded-full'></span>
  </div>
  <div class='grid grid-cols-1 gap-8 xl:gap-12 md:grid-cols-2 xl:grid-cols-3'>
    {
      services.map((service) => (
        <ServiceItem
          title={service.title}
          content={service.description}
          id={service.id}
        />
      ))
    }
  </div>
  <hr class='mt-24 border-gray-200 dark:border-gray-700' />
</section>
