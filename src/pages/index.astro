---
import { AstroSeo } from '@astrolib/seo';

import Layout from '../layouts/Layout.astro';

import { getHome, getProjects } from '../lib/dato-cms';

import Hero from '../components/Hero.astro';

const home = await getHome();
const projects = await getProjects();
---

<AstroSeo
  title={home.title}
  description={home.content}
  canonical='https://www.lumalux.com.ar/'
/>

<Layout>
  <Hero title={home.title} content={home.content} sections={home.sections} image={home.image} />
</Layout>
