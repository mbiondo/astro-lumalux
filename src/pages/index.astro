---
import { AstroSeo } from '@astrolib/seo';

import Layout from '../layouts/Layout.astro';

import { getHome, getProjects, getServices } from '../lib/dato-cms';

import Hero from '../components/home/Hero.astro';
import Services from '../components/services/List.astro';
import Projects from '../components/projects/List.astro';

const home = await getHome();
const projects = await getProjects();
const services = await getServices();
---

<AstroSeo
  title={home.title}
  description={home.content}
  canonical='https://www.lumalux.com.ar/'
/>

<Layout>
  <Hero
    title={home.title}
    content={home.content}
    sections={home.sections}
    image={home.image}
  />
  <Services services={services} />
  <Projects projects={projects} />
</Layout>
