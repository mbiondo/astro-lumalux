---
import { getServiceBySlug, getServices } from '../../lib/local-json';
import type { Service } from '../../types';

import Layout from '../../layouts/Layout-fs.astro';

export async function getStaticPaths() {
  const services: Service[] = await getServices();
  return services.map((service) => {
    return {
      params: {
        slug: service.slug,
      },
    };
  });
}

const { slug } = Astro.params;

const service: Service | undefined = await getServiceBySlug(slug ?? '');
---

<Layout>
  <section
    class='flex flex-grow place-items-center min-h-screen'
    transition:name={`service ${service?.slug} box`}
  >
    <div
      class='container px-6 py-10 mx-auto flex-row align-middle content-center place-content-center flex-grow block p-8 transition'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-10 w-10 text-orange-500'
        fill='none'
        viewBox='0 0 24 24'
        stroke='currentColor'
        transition:name={`service ${service?.slug} icon`}
      >
        <path d='M12 14l9-5-9-5-9 5 9 5z'></path>
        <path
          d='M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z'
        ></path>
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222'
        ></path>
      </svg>

      <h2
        class='mt-4 text-xl font-bold text-white'
        transition:name={`service ${service?.slug} title`}
      >
        {service.name}
      </h2>

      <p
        class='mt-1 text-sm text-gray-300'
        transition:name={`service ${service?.slug} description`}
      >
        {service.description}
      </p>
    </div>
  </section>
</Layout>
